{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Budget Allocation",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Total Budget: ${total_budget}",
      "spacing": "Small"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Channel Breakdown",
          "weight": "Bolder",
          "spacing": "Medium"
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "CTV",
          "value": "${ctv_budget} (${ctv_percent}%)"
        },
        {
          "title": "Programmatic Display",
          "value": "${display_budget} (${display_percent}%)"
        },
        {
          "title": "Paid Search",
          "value": "${search_budget} (${search_percent}%)"
        },
        {
          "title": "Paid Social",
          "value": "${social_budget} (${social_percent}%)"
        },
        {
          "title": "Audio",
          "value": "${audio_budget} (${audio_percent}%)"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Allocated",
                  "size": "Small",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "text": "${allocated_total}",
                  "weight": "Bolder"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Remaining",
                  "size": "Small",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "text": "${remaining_budget}",
                  "weight": "Bolder",
                  "color": "${remaining_color}"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Reserve",
                  "size": "Small",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "text": "${reserve_budget}",
                  "weight": "Bolder"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Allocation Status: ${allocation_status}",
      "color": "${status_color}",
      "spacing": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Container",
      "style": "${warning_style}",
      "isVisible": "${show_warnings}",
      "items": [
        {
          "type": "TextBlock",
          "text": "Warnings",
          "weight": "Bolder",
          "color": "Attention"
        },
        {
          "type": "TextBlock",
          "text": "${warning_messages}",
          "wrap": true,
          "size": "Small"
        }
      ]
    },
    {
      "type": "Container",
      "style": "emphasis",
      "isVisible": "${show_recommendations}",
      "items": [
        {
          "type": "TextBlock",
          "text": "Recommendations",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "${recommendation_messages}",
          "wrap": true,
          "size": "Small"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Adjust Allocation",
      "data": {
        "action": "adjust_budget"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Approve & Continue",
      "data": {
        "action": "approve_budget"
      }
    },
    {
      "type": "Action.Submit",
      "title": "View Details",
      "data": {
        "action": "budget_details"
      }
    }
  ],
  "metadata": {
    "cardId": "budget_allocation",
    "version": "1.0",
    "createdDate": "2025-12-30",
    "description": "Budget allocation visualization card showing channel breakdown and status"
  }
}
