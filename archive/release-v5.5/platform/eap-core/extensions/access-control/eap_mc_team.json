{
  "schemaName": "eap_mc_team",
  "displayName": "Team",
  "pluralName": "Teams",
  "description": "Team within a department for row-level security hierarchy",
  "primaryColumn": "name",
  "ownershipType": "OrganizationOwned",
  "tableType": "Standard",
  "columns": [
    {
      "schemaName": "team_id",
      "displayName": "Team ID",
      "type": "Text",
      "format": "Text",
      "maxLength": 50,
      "required": true,
      "description": "Unique identifier for the team"
    },
    {
      "schemaName": "department_id",
      "displayName": "Department",
      "type": "Lookup",
      "target": "eap_mc_department",
      "required": true,
      "description": "Parent department"
    },
    {
      "schemaName": "name",
      "displayName": "Name",
      "type": "Text",
      "format": "Text",
      "maxLength": 200,
      "required": true,
      "description": "Team display name"
    },
    {
      "schemaName": "code",
      "displayName": "Code",
      "type": "Text",
      "format": "Text",
      "maxLength": 20,
      "required": true,
      "description": "Short code for the team"
    },
    {
      "schemaName": "description",
      "displayName": "Description",
      "type": "Text",
      "format": "TextArea",
      "maxLength": 2000,
      "required": false,
      "description": "Team description"
    },
    {
      "schemaName": "leader_email",
      "displayName": "Leader Email",
      "type": "Text",
      "format": "Email",
      "maxLength": 200,
      "required": false,
      "description": "Email of team leader"
    },
    {
      "schemaName": "is_active",
      "displayName": "Is Active",
      "type": "Boolean",
      "default": true,
      "required": false,
      "description": "Whether this team is active"
    },
    {
      "schemaName": "created_at",
      "displayName": "Created At",
      "type": "DateTime",
      "format": "DateAndTime",
      "required": false,
      "description": "Record creation timestamp"
    },
    {
      "schemaName": "modified_at",
      "displayName": "Modified At",
      "type": "DateTime",
      "format": "DateAndTime",
      "required": false,
      "description": "Record last modification timestamp"
    }
  ],
  "relationships": [
    {
      "name": "department_teams",
      "type": "ManyToOne",
      "relatedTable": "eap_mc_department",
      "relatedColumn": "department_id",
      "cascadeDelete": "RemoveLink"
    }
  ],
  "indexes": [
    {
      "name": "idx_team_code",
      "columns": ["code"],
      "unique": true
    },
    {
      "name": "idx_team_department",
      "columns": ["department_id"],
      "unique": false
    }
  ]
}
