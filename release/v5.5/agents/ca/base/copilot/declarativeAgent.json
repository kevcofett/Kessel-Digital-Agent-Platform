{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/declarative-agent/v1.5/schema.json",
    "version": "v1.5",
    "name": "Consulting Agent v10.1${{APP_NAME_SUFFIX}}",
    "description": "Aragorn AI V10.1 - 5-step consulting workflow with depth inference, 32 frameworks, native Copilot capabilities",
    "instructions": "$[file('instruction.txt')]",
    "capabilities": [
        {
            "name": "WebSearch"
        },
        {
            "name": "GraphConnectors",
            "connections": [
                {
                    "connection_id": "${{CONNECTOR_ID}}"
                }
            ]
        },
        {
            "name": "OneDriveAndSharePoint",
            "items_by_url": [
                {
                    "url": "${{SHAREPOINT_KNOWLEDGE_BASE_URL}}"
                }
            ]
        }
    ]
}