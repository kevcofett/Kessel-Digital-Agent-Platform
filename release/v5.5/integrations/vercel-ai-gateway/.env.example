# Vercel AI Gateway Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# AI Provider API Keys
# ===========================================

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key (optional - for GPT fallback models)
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# Microsoft Dataverse Configuration
# ===========================================

# Dataverse environment URL (e.g., https://org12345.crm.dynamics.com)
DATAVERSE_URL=https://your-org.crm.dynamics.com

# Azure AD App Registration credentials for Dataverse
DATAVERSE_CLIENT_ID=your-azure-app-client-id
DATAVERSE_CLIENT_SECRET=your-azure-app-client-secret
DATAVERSE_TENANT_ID=your-azure-tenant-id

# ===========================================
# Microsoft SharePoint Configuration
# ===========================================

# SharePoint site URL for KB documents
SHAREPOINT_SITE_URL=https://your-tenant.sharepoint.com/sites/your-site

# SharePoint document library name
SHAREPOINT_LIBRARY_NAME=AragornAI2

# Azure AD credentials for SharePoint (can reuse Dataverse app if configured)
SHAREPOINT_CLIENT_ID=your-azure-app-client-id
SHAREPOINT_CLIENT_SECRET=your-azure-app-client-secret
SHAREPOINT_TENANT_ID=your-azure-tenant-id

# ===========================================
# Vercel Deployment Configuration
# ===========================================

# Vercel project name (optional - for deployment scripts)
VERCEL_PROJECT_NAME=kessel-ai-gateway

# Vercel team ID (optional - for team deployments)
VERCEL_TEAM_ID=

# ===========================================
# Runtime Configuration
# ===========================================

# Default model for MPA agent
MPA_DEFAULT_MODEL=claude-sonnet-4-20250514

# Default model for CA agent
CA_DEFAULT_MODEL=claude-sonnet-4-20250514

# Maximum tokens for agent responses
MAX_TOKENS=4096

# Enable debug logging (true/false)
DEBUG=false

# MCP server name
MCP_SERVER_NAME=Kessel-Digital-Agent-Platform

# ===========================================
# Feature Flags
# ===========================================

# Enable web search fallback when Dataverse has no benchmarks
ENABLE_WEB_SEARCH_FALLBACK=true

# Enable caching for benchmark queries
ENABLE_BENCHMARK_CACHE=true

# Cache TTL in seconds (default: 1 hour)
BENCHMARK_CACHE_TTL=3600
