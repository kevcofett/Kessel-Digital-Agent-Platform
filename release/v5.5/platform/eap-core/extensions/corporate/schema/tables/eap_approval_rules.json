{
  "schemaName": "eap_approval_rules",
  "displayName": "Approval Rules",
  "pluralName": "Approval Rules",
  "description": "Rules for when approval is required",
  "tier": 3,
  "featureGate": "BASIC_APPROVAL",
  "category": "Approval",
  "primaryKey": "rule_id",
  "primaryNameColumn": "rule_name",
  "ownershipType": "OrganizationOwned",
  "columns": [
    { "schemaName": "rule_id", "displayName": "Rule ID", "dataType": "UniqueIdentifier", "required": true, "description": "Primary key" },
    { "schemaName": "rule_code", "displayName": "Rule Code", "dataType": "Text", "maxLength": 50, "required": true, "unique": true, "description": "Unique rule code" },
    { "schemaName": "rule_name", "displayName": "Rule Name", "dataType": "Text", "maxLength": 100, "required": true, "description": "Rule display name" },
    { "schemaName": "description", "displayName": "Description", "dataType": "Text", "maxLength": 500, "required": false, "description": "Rule description" },
    { "schemaName": "approval_type", "displayName": "Approval Type", "dataType": "Choice", "required": true, "options": ["Internal", "Client"], "description": "Type of approval" },
    { "schemaName": "trigger_output_type", "displayName": "Trigger Output Type", "dataType": "Choice", "required": false, "options": ["Analysis", "Recommendation", "Report", "Presentation", "Summary", "Comparison", "Roadmap", "Memo", "Brief", "DataExport"], "description": "Output type trigger" },
    { "schemaName": "trigger_audience_type", "displayName": "Trigger Audience", "dataType": "Choice", "required": false, "options": ["Internal", "Client", "Executive", "External"], "description": "Audience type trigger" },
    { "schemaName": "trigger_conditions_json", "displayName": "Trigger Conditions", "dataType": "MultilineText", "required": false, "description": "Additional conditions JSON" },
    { "schemaName": "scope_type", "displayName": "Scope Type", "dataType": "Choice", "required": false, "options": ["Platform", "Division", "BusinessUnit", "ProductUnit", "Client", "Engagement"], "description": "Rule scope" },
    { "schemaName": "scope_entity_id", "displayName": "Scope Entity ID", "dataType": "UniqueIdentifier", "required": false, "description": "Specific scope entity" },
    { "schemaName": "approver_type", "displayName": "Approver Type", "dataType": "Choice", "required": true, "options": ["RoleLevel", "SpecificUser", "RelationshipBased", "Chain"], "description": "How approver is determined" },
    { "schemaName": "approver_config_json", "displayName": "Approver Config", "dataType": "MultilineText", "required": true, "description": "Approver configuration JSON" },
    { "schemaName": "approval_mode", "displayName": "Approval Mode", "dataType": "Choice", "required": true, "options": ["Single", "All", "Any", "Sequential"], "description": "Approval mode" },
    { "schemaName": "allow_delegation", "displayName": "Allow Delegation", "dataType": "Boolean", "required": true, "defaultValue": true, "description": "Allow delegation" },
    { "schemaName": "allow_expedite", "displayName": "Allow Expedite", "dataType": "Boolean", "required": true, "defaultValue": false, "description": "Allow expedite" },
    { "schemaName": "expedite_approver_level", "displayName": "Expedite Level", "dataType": "Text", "maxLength": 10, "required": false, "description": "Level required to expedite" },
    { "schemaName": "notify_on_submit", "displayName": "Notify on Submit", "dataType": "Boolean", "required": true, "defaultValue": true, "description": "Notify on submission" },
    { "schemaName": "escalation_hours", "displayName": "Escalation Hours", "dataType": "WholeNumber", "required": false, "description": "Hours before escalation" },
    { "schemaName": "escalation_to_json", "displayName": "Escalation To", "dataType": "MultilineText", "required": false, "description": "Escalation targets JSON" },
    { "schemaName": "sla_hours", "displayName": "SLA Hours", "dataType": "WholeNumber", "required": false, "description": "Expected turnaround" },
    { "schemaName": "priority", "displayName": "Priority", "dataType": "WholeNumber", "required": true, "description": "Rule priority (lower = higher)" },
    { "schemaName": "is_active", "displayName": "Is Active", "dataType": "Boolean", "required": true, "defaultValue": true, "description": "Active status" },
    { "schemaName": "effective_date", "displayName": "Effective Date", "dataType": "DateTime", "required": true, "description": "Start date" },
    { "schemaName": "end_date", "displayName": "End Date", "dataType": "DateTime", "required": false, "description": "End date" },
    { "schemaName": "created_date", "displayName": "Created Date", "dataType": "DateTime", "required": true, "description": "Record created" },
    { "schemaName": "created_by", "displayName": "Created By", "dataType": "Lookup", "lookupTable": "eap_user", "required": true, "description": "Creator" },
    { "schemaName": "modified_date", "displayName": "Modified Date", "dataType": "DateTime", "required": true, "description": "Last modified" },
    { "schemaName": "modified_by", "displayName": "Modified By", "dataType": "Lookup", "lookupTable": "eap_user", "required": true, "description": "Modifier" }
  ],
  "indexes": [
    { "name": "idx_rule_code", "columns": ["rule_code"], "unique": true },
    { "name": "idx_scope", "columns": ["scope_type", "scope_entity_id"], "unique": false },
    { "name": "idx_active_priority", "columns": ["is_active", "priority"], "unique": false }
  ]
}
