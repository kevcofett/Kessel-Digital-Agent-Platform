{
  "schemaName": "eap_quality_scores",
  "displayName": "Quality Score",
  "pluralName": "Quality Scores",
  "description": "Quality scoring for outputs and content",
  "tier": 3,
  "featureGate": "QUALITY_SCORING",
  "category": "Analytics",
  "primaryKey": "score_id",
  "primaryNameColumn": "score_id",
  "ownershipType": "OrganizationOwned",
  "columns": [
    { "schemaName": "score_id", "displayName": "Score ID", "dataType": "UniqueIdentifier", "required": true, "description": "Primary key" },
    { "schemaName": "entity_type", "displayName": "Entity Type", "dataType": "Text", "maxLength": 100, "required": true, "description": "Type of scored entity" },
    { "schemaName": "entity_id", "displayName": "Entity ID", "dataType": "UniqueIdentifier", "required": true, "description": "ID of scored entity" },
    { "schemaName": "score_type", "displayName": "Score Type", "dataType": "Choice", "required": true, "options": ["Accuracy", "Completeness", "Relevance", "Clarity", "Compliance", "Overall"], "description": "Type of quality score" },
    { "schemaName": "score_value", "displayName": "Score Value", "dataType": "Decimal", "precision": 5, "scale": 2, "required": true, "description": "Score 0-100" },
