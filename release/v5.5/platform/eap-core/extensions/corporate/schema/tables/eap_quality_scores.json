    { "schemaName": "scoring_criteria_json", "displayName": "Scoring Criteria", "dataType": "MultilineText", "required": false, "description": "Criteria used JSON" },
    { "schemaName": "scored_by_user_id", "displayName": "Scored By", "dataType": "Lookup", "lookupTable": "eap_user", "required": false, "description": "User who scored (if manual)" },
    { "schemaName": "score_date", "displayName": "Score Date", "dataType": "DateTime", "required": true, "description": "When scored" },
    { "schemaName": "notes", "displayName": "Notes", "dataType": "MultilineText", "required": false, "description": "Scoring notes" }
  ],
  "indexes": [
    { "name": "idx_entity", "columns": ["entity_type", "entity_id"], "unique": false },
    { "name": "idx_score_type", "columns": ["score_type"], "unique": false }
  ]
}
