                "expected_metrics": {
                  "impressions": "@mul(div(mul(outputs('parse_input')?['budget'], 0.30), 12.50), 1000)",
                  "reach": "@mul(div(mul(outputs('parse_input')?['budget'], 0.30), 12.50), 1000, 0.65)",
