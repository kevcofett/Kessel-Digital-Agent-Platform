            "channels": "@triggerBody()?['channels']",
            "objective": "@coalesce(triggerBody()?['optimization_objective'], 'balanced')",
            "constraints": "@coalesce(triggerBody()?['constraints'], createArray())",
            "industry": "@coalesce(triggerBody()?['industry'], 'general')",
