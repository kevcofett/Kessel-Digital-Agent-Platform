        "calculate_final_allocation": {
          "type": "Compose",
          "inputs": {
            "budget": "@outputs('parse_input')?['budget']",
            "allocations": [
              {
                "channel_id": "meta_facebook",
                "channel_name": "Meta (Facebook/Instagram)",
                "allocation_percent": 30,
                "allocation_amount": "@mul(outputs('parse_input')?['budget'], 0.30)",
