{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "good",
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI0OCIgaGVpZ2h0PSI0OCIgdmlld0JveD0iMCAwIDI0IDI0IiBmaWxsPSJub25lIiBzdHJva2U9IiNmZmZmZmYiIHN0cm9rZS13aWR0aD0iMiI+PHBhdGggZD0iTTIyIDExLjA4VjEyYTEwIDEwIDAgMSAxLTUuOTMtOS4xNCIvPjxwYXRoIGQ9Ik0yMiA0TDEyIDE0bC0zLTMiLz48L3N2Zz4=",
                  "size": "Medium"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Workflow Complete",
                  "weight": "Bolder",
                  "size": "Large",
                  "color": "Light"
                },
                {
                  "type": "TextBlock",
                  "text": "${workflowName}",
                  "color": "Light",
                  "spacing": "None"
                }
              ]
            }
          ]
        }
      ],
      "padding": "Default"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Summary",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${summaryText}",
          "wrap": true
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Workflow Statistics",
          "weight": "Bolder",
          "size": "Small"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${stepsCompleted}",
                  "weight": "Bolder",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center",
                  "color": "Good"
                },
                {
                  "type": "TextBlock",
                  "text": "Steps",
                  "size": "Small",
                  "horizontalAlignment": "Center",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${decisionsCount}",
                  "weight": "Bolder",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center",
                  "color": "Accent"
                },
                {
                  "type": "TextBlock",
                  "text": "Decisions",
                  "size": "Small",
                  "horizontalAlignment": "Center",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${duration}",
                  "weight": "Bolder",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "TextBlock",
                  "text": "Duration",
                  "size": "Small",
                  "horizontalAlignment": "Center",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${agentsUsed}",
                  "weight": "Bolder",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center",
                  "color": "Warning"
                },
                {
                  "type": "TextBlock",
                  "text": "Agents",
                  "size": "Small",
                  "horizontalAlignment": "Center",
                  "isSubtle": true
                }
              ]
            }
          ]
        }
      ],
      "separator": true,
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Key Outcomes",
          "weight": "Bolder",
          "size": "Small"
        },
        {
          "type": "Container",
          "items": [
            {
              "$data": "${outcomes}",
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "âœ“",
                      "color": "Good",
                      "weight": "Bolder"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${text}",
                      "wrap": true
                    }
                  ]
                }
              ]
            }
          ]
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Recommendations Generated",
          "weight": "Bolder",
          "size": "Small"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "$data": "${recommendations}",
              "title": "${category}",
              "value": "${summary}"
            }
          ]
        }
      ],
      "spacing": "Medium",
      "$when": "${length(recommendations) > 0}"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Generated Artifacts",
          "weight": "Bolder",
          "size": "Small"
        },
        {
          "type": "Container",
          "items": [
            {
              "$data": "${artifacts}",
              "type": "ColumnSet",
              "columns": [
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "Image",
                      "url": "${iconUrl}",
                      "size": "Small"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${name}",
                      "weight": "Bolder"
                    },
                    {
                      "type": "TextBlock",
                      "text": "${type}",
                      "size": "Small",
                      "isSubtle": true
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "ActionSet",
                      "actions": [
                        {
                          "type": "Action.OpenUrl",
                          "title": "Open",
                          "url": "${url}"
                        }
                      ]
                    }
                  ]
                }
              ],
              "separator": true
            }
          ]
        }
      ],
      "spacing": "Medium",
      "$when": "${length(artifacts) > 0}"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Download Report",
          "style": "positive",
          "data": {
            "action": "downloadReport",
            "sessionId": "${sessionId}",
            "workflowId": "${workflowId}"
          }
        },
        {
          "type": "Action.Submit",
          "title": "Start New Workflow",
          "data": {
            "action": "startNew"
          }
        },
        {
          "type": "Action.Submit",
          "title": "View History",
          "data": {
            "action": "viewHistory",
            "sessionId": "${sessionId}"
          }
        },
        {
          "type": "Action.Submit",
          "title": "Share Results",
          "data": {
            "action": "share",
            "sessionId": "${sessionId}"
          }
        }
      ],
      "spacing": "Large"
    }
  ],
  "metadata": {
    "webUrl": "${webAppUrl}",
    "templateId": "kdap-workflow-complete"
  }
}
