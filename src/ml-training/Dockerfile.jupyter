# KDAP ML Jupyter Lab Environment
# Interactive development and experimentation

FROM python:3.11-slim

LABEL maintainer="Kessel Digital <dev@kesseldigital.com>"
LABEL description="KDAP ML Jupyter Lab Environment"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    JUPYTER_ENABLE_LAB=yes \
    JUPYTER_TOKEN="" \
    PATH="/opt/venv/bin:$PATH"

WORKDIR /workspace

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    graphviz \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv

# Copy and install requirements
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
        jupyterlab>=4.0.0 \
        ipywidgets>=8.0.0 \
        plotly>=5.0.0 \
        seaborn>=0.12.0 \
        shap>=0.42.0 \
        lime>=0.2.0 \
        graphviz>=0.20.0

# Create user
RUN useradd --create-home --shell /bin/bash jupyter && \
    mkdir -p /notebooks /data /models && \
    chown -R jupyter:jupyter /workspace /notebooks /data /models

USER jupyter

# Expose Jupyter port
EXPOSE 8888

# Start Jupyter Lab
CMD ["jupyter", "lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--NotebookApp.token=''", "--NotebookApp.password=''"]
